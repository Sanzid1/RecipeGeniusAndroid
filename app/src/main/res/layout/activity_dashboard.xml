<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Main content (Dashboard) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Toolbar with Hamburger icon -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:title="Recipe Genius"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        <!-- Add content for Dashboard like ingredients input -->
        <EditText
            android:id="@+id/ingredientsInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter ingredients"
            android:padding="16dp" />

        <Button
            android:id="@+id/searchButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Search Recipe" />

        <!-- Other content goes here -->
    </LinearLayout>

    <!-- Navigation Drawer (Sidebar) -->
    <androidx.drawerlayout.widget.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start">

        <!-- Menu items for the drawer -->
        <menu xmlns:android="http://schemas.android.com/apk/res/android">
            <item
                android:id="@+id/menu_logout"
                android:title="Logout"
                android:icon="@drawable/ic_logout" />
        </menu>

    </androidx.drawerlayout.widget.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>